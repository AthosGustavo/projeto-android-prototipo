<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.TelaPrincipalActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_tela_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/container_btns_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_menu_treinamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_treinamento"/>

        <ImageButton
            android:id="@+id/btn_menu_turma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_menu_turma"/>

        <ImageButton
            android:id="@+id/btn_menu_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_menu_person"/>

    </LinearLayout>

</RelativeLayout>